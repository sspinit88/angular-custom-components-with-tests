//// --- $ --- vars ---
$white = #ffffff
$black = #000000

$primary = #a6c674
$accent = #22b2b4
$warn = #dd6262

$grey-light = #edece8 // фон
$grey-middle = #939393 // disabled
$grey-deep = #7e7e7e // cancel
$background = #f4f3f0


//// --- # --- mixins ---
bcb
  background: dodgerblue

bcg
  background: darkgreen

bcr
  background: red

brb
  border: 1px solid dodgerblue

brg
  border: 1px solid darkgreen

brr
  border: 1px solid red

ears()
  &after
    content: ''
    position: absolute
    top: 0
    left: -50vw
    right: -50vw
    z-index: -1
    margin: auto

    display: block
    height: 100%
    width: 100vw
    background-color: inherit

inDeveloping()
  display: flex
  justify-content: center
  align-items: center
  height: auto
  font-size: 24px
  color: $grey-deep
  text-transform: uppercase


//// --- стили только для Firefox
firefox()
  @-moz-document url-prefix()
    @content
